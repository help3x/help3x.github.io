<!doctype html>
<html amp>
<head>
  <meta charset="utf-8">
  <!-- $if(title-prefix)$$title-prefix$ &#x2d; $endif$$pagetitle$$if(title-suffix)$ &#x7c; $title-suffix$$endif$ -->
  <!-- @Model.PageTitlePrefix &#x2d; -->
  <!-- @Model.PageTItleSuffix &#x7c; -->
  <title>@Model.PageTitle</title>
  <link rel="canonical" href="/$folder-name$/index.html">
  <meta name="viewport" content="width=device-width,minimum-scale=1,initial-scale=1">
  <style amp-boilerplate>body{-webkit-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-moz-animation:-amp-start 8s steps(1,end) 0s 1 normal both;-ms-animation:-amp-start 8s steps(1,end) 0s 1 normal both;animation:-amp-start 8s steps(1,end) 0s 1 normal both}@-webkit-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-moz-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-ms-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@-o-keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}@keyframes -amp-start{from{visibility:hidden}to{visibility:visible}}</style><noscript><style amp-boilerplate>body{-webkit-animation:none;-moz-animation:none;-ms-animation:none;animation:none}</style></noscript>
  $if(custom-css)$<style amp-custom>$custom-css$</style>$endif$
  <script async src="https://cdn.ampproject.org/v0.js"></script>
</head>
<body>
  <header>
    <p><a href="/">Title</a></p>
    <nav>
      <ul>
        @for (var i = 0; i < 3; i++) {
        <li><a href="#">Navi1</a></li>
        <li><a href="#">Navi2</a></li>
        <li><a href="#">Navi3</a></li>
        }
      </ul>
    </nav>
  </header>
  <div class="container1000">
    <div class="container">
      <main class="main">
          <!-- MainContents Begin -->

@Model.Body

          <!-- MainContents End -->
      </main>
      <aside class="sidebar">
        @* $if(recent-posts)$<section class="recent-posts">
          <h2>Recent Posts</h2>
          <ul>$for(recent-posts)$<li>$recent-posts$</li>$endfor$</ul>
        </section>$endif$
        @if (@Model.RecentPosts != null && @Model.RecentPosts.Count() > 0) {
        <h2>Recent Posts</h2>
        <ul> *@
        @foreach (var post in @Model.RecentPosts) {
          <li><a href="@post.LinkPath">@post.LinkTitle</a></li>
        }
        </ul>
        }
      </aside>
    </div>
  </div>
  <footer>
    <p class="copyright">@Model.Copyright</p>
  </footer>
</body>
</html>
